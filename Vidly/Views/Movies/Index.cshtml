@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@{ 
    if (Model.Count() == 0)
    { <p>we dont have any movies yet</p>}
    else
    {
        <ul>
            @foreach (var mov in Model)
            {
                <li>@mov.Name</li>
            }
        </ul>
    }

}
