@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@{ 
    if (Model.Count() == 0)
    { <p>we dont have any movies yet</p>}
    else
    {
        @Html.ActionLink(
        linkText:"New Movie",
        actionName:"New",
        controllerName:"Movies",
        htmlAttributes:new { @class="btn btn-primary"},
        routeValues:null)
        <table class="table-bordered table table-hover">
            <thead>
                <tr>
                    <td>Movie</td>
                    <td>Genre</td>
                </tr>
            </thead>
            <tbody>
                
                    @foreach (var mov in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(@mov.Name, "Edit", "Movies", new { id = mov.Id }, null)</td>
                            <td>@mov.Genre.Name</td>
                            
                        </tr>
                    }
            </tbody>
        </table>



        <ul>
           
        </ul>
    }

}
