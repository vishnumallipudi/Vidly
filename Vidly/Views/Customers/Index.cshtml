@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@{ 
    if (Model.Count() == 0)
    {<p>we dont have any customers yet</p> }
    else
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Customers</th>
                    <th>Membership Type</th>
                </tr>
            </thead>
            <tbody>
               
                    @foreach (var cu in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(cu.Name, "Details", "Customers", new { id = cu.Id }, null)</td>
                            <td>@cu.MembershipType.Name</td>
                        </tr>
                    }
                
            </tbody>
        </table>
        
    }
}

