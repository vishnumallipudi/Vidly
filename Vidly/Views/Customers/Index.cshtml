@model IEnumerable<Vidly.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@{ 
    if (Model.Count() == 0)
    {<p>we dont have any customers yet</p> }
    else
    {
        <ul>
            @foreach (var cu in Model)
            { <li>@Html.ActionLink(cu.Name,"Details","Customers",new { id=cu.Id},null)</li>}
        </ul>
    }
}

